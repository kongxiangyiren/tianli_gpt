{
  "include": [
    "src/**/*"
  ],
  "exclude": [],
  "compilerOptions": {
    "composite": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
    ],
    "types": [],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
}
